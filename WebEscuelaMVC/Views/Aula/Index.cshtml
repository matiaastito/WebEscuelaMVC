@model IEnumerable<WebEscuelaMVC.Models.Aula>

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    <div>
        @Html.ActionLink("Añadir un Aula",
           "Create", "Aula")
    </div>
    <div> 
        <h2>Todas las Aulas</h2>
        <table>
            <tr>
                <th>Numero</th>
                <th>Estado</th>
                <th></th>
                <th></th>
                <th></th>
            </tr>
            @foreach (var aula in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(model=>aula.Numero)</td>
                    <td>@Html.DisplayFor(model => aula.Estado)</td>
                    <td>@Html.ActionLink("Detalle","Details",new { id = aula.AulaId })</td>
                    <td>@Html.ActionLink("Eliminar", "Delete", new { id = aula.AulaId })</td>
                    <td>@Html.ActionLink("Editar", "Edit", new { id = aula.AulaId })</td>
                </tr>
            }
        </table>
    </div>
</body>
</html>
